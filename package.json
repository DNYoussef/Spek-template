{
  "name": "spek-enhanced-platform",
  "version": "1.0.0",
  "description": "SPEK Enhanced Development Platform with Research Intelligence and Theater Detection",
  "scripts": {
    "test": "jest",
    "test:js": "jest --coverage",
    "test:py": "python -m pytest tests/ -v --tb=short",
    "test:py:analyzer": "python -m pytest tests/test_analyzer.py -v",
    "test:py:performance": "python -m pytest tests/test_performance.py -v",
    "test:py:integration": "python -m pytest tests/test_integration.py -v",
    "lint": "echo 'Running linters...' && npm run lint:js && npm run lint:py",
    "lint:js": "echo 'JavaScript linting not configured yet'",
    "lint:py": "python -m flake8 analyzer/ --max-line-length=120 --extend-ignore=E203,W503",
    "lint:py:fix": "python -m autopep8 --in-place --recursive analyzer/",
    "typecheck": "echo 'Running type checks...' && npm run typecheck:py",
    "typecheck:py": "python -m mypy analyzer/ --ignore-missing-imports",
    "security": "npm run security:py",
    "security:py": "python -m bandit -r analyzer/ -f json -o .claude/.artifacts/security-scan.json",
    "analyze": "python test_modules.py",
    "validate": "npm run test:js && npm run test:py && npm run lint && npm run typecheck",
    "build": "echo 'Build step completed - modules ready'",
    "start": "python -m analyzer.cli --help",
    "prepare": "husky"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "@types/natural": "^5.1.5",
    "natural": "^8.1.0",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.9",
    "chokidar": "^4.0.3",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "zod": "^4.1.9"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "keywords": [
    "spek",
    "analyzer",
    "connascence",
    "quality",
    "theater-detection"
  ],
  "license": "MIT"
}
