{
  "name": "spek-driven-template",
  "version": "1.0.0",
  "description": "SPEK-driven development template with Claude Flow, Gemini CLI, Codex CLI, and Connascence Analysis",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "coverage": "jest --coverage",
    "coverage:watch": "jest --coverage --watch",
    "diff:coverage": "node scripts/diff_coverage.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist coverage .jest-cache"
  },
  "keywords": [
    "spek",
    "spec-driven",
    "claude-flow",
    "quality-gates",
    "connascence"
  ],
  "author": "SPEK Template",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^3.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fast-check": "^3.15.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
