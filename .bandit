# Bandit configuration - Enhanced for SPEK Template Development
[bandit]
# Skip test and generated files
exclude_dirs = /tests/,/test/,/node_modules/,/.git/,/dist/,/build/,.claude/,/examples/,/__pycache__/

# Suppress false positives and development-appropriate warnings
skips = B101,B102,B110,B301,B303,B304,B324,B506,B601,B602,B603,B604,B605,B606,B607,B608,B609,B701,B702,B703

# Test IDs to skip (expanded for analyzer system):
# B101: assert_used (NASA compliance requires assertions)
# B102: exec_used (dynamic code execution in analyzer patterns)
# B110: try_except_pass (acceptable for error handling in analysis)
# B301: pickle usage (safe caching system with controlled data)
# B303: MD5/SHA1 for non-cryptographic use (file hashing)
# B304: cipher usage (false positive for string operations)
# B324: hashlib weak algorithms (used for caching, not security)
# B506: yaml_load (controlled YAML in configuration)
# B601-B609: Shell injection (controlled inputs in our system)
# B701-B703: Jinja2 autoescape (not applicable to analyzer)

# Only report high-confidence, medium+ severity issues
confidence = 3  # Only HIGH confidence
severity = 2    # Only MEDIUM+ severity

# Exclude specific files with legitimate security patterns
exclude = */examples/*,*/test_*,*_test.py,*/docs/*
