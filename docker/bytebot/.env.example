# SPEK Enhanced Development Platform - Desktop Automation Environment Configuration
# Copy this file to .env and configure the values according to your environment
# Version: 1.0.0
# Last Updated: 2024-09-18

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================

# PostgreSQL Database Configuration
POSTGRES_PASSWORD=SecurePassword123!ChangeMe
POSTGRES_USER=spekuser
POSTGRES_DB=spekdesktop
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=RedisSecure456!ChangeMe
REDIS_PORT=6379

# Session and Security
SESSION_SECRET=YourVerySecureSessionSecret789!ChangeMe
VNC_PASSWORD=spek2024!secure

# API Keys - REQUIRED for AI model integration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_API_KEY=sk-your-openai-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# ==========================================
# SERVICE PORTS CONFIGURATION
# ==========================================

# Bytebot Services
BYTEBOT_DESKTOP_PORT=9990
BYTEBOT_AGENT_PORT=9991
BYTEBOT_UI_PORT=9992

# VNC and Evidence Collection
VNC_PORT=5900
EVIDENCE_PORT=8080

# CORS and Security
CORS_ORIGIN=http://localhost:3000,http://localhost:9992
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX=100

# ==========================================
# DESKTOP ENVIRONMENT CONFIGURATION
# ==========================================

# Virtual Desktop Settings
DESKTOP_WIDTH=1920
DESKTOP_HEIGHT=1080
SCREEN_DEPTH=24
SESSION_TIMEOUT=3600

# UI Theme and Branding
UI_THEME=spek-dark
ENVIRONMENT=development

# ==========================================
# RESOURCE LIMITS AND PERFORMANCE
# ==========================================

# Desktop Container Resources
DESKTOP_CPU_LIMIT=2.0
DESKTOP_CPU_RESERVE=0.5
DESKTOP_MEMORY_LIMIT=4G
DESKTOP_MEMORY_RESERVE=1G

# Database Container Resources
DB_CPU_LIMIT=1.0
DB_CPU_RESERVE=0.25
DB_MEMORY_LIMIT=1G
DB_MEMORY_RESERVE=256M

# Agent Container Resources
AGENT_CPU_LIMIT=1.5
AGENT_CPU_RESERVE=0.25
AGENT_MEMORY_LIMIT=2G
AGENT_MEMORY_RESERVE=512M

# UI Container Resources
UI_CPU_LIMIT=0.5
UI_CPU_RESERVE=0.1
UI_MEMORY_LIMIT=512M
UI_MEMORY_RESERVE=128M

# ==========================================
# VOLUME AND STORAGE PATHS
# ==========================================

# Base path for SPEK artifacts (relative to docker-compose.yml)
SPEK_ARTIFACTS_PATH=./.claude/.artifacts/desktop

# Data volume paths (will be created automatically)
DATA_VOLUME_PATH=./data/postgres
EVIDENCE_VOLUME_PATH=./data/evidence
SCREENSHOTS_VOLUME_PATH=./data/screenshots
LOGS_VOLUME_PATH=./data/logs
AGENT_DATA_PATH=./data/agent
REDIS_DATA_PATH=./data/redis

# ==========================================
# INTEGRATION SETTINGS
# ==========================================

# SPEK Platform Integration
SPEK_INTEGRATION_ENABLED=true
SPEK_EVIDENCE_COLLECTION=enabled
SPEK_THEATER_DETECTION=enabled
SPEK_QUALITY_GATES=enabled

# GitHub Integration (Optional)
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Notification Settings (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================

# Logging Configuration
LOG_LEVEL=info
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Development Features
HOT_RELOAD=false
DEV_TOOLS=false
API_DOCS=true

# Health Check Intervals (seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ==========================================
# BACKUP AND MAINTENANCE
# ==========================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=spek-desktop-backups
BACKUP_S3_REGION=us-east-1

# Maintenance Windows
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00
AUTO_UPDATE_ENABLED=false

# ==========================================
# MONITORING AND ALERTING
# ==========================================

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Alert Thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_THRESHOLD=5

# ==========================================
# SECURITY SCANNING AND COMPLIANCE
# ==========================================

# Security Settings
SECURITY_SCAN_ENABLED=true
VULNERABILITY_SCAN_INTERVAL=daily
COMPLIANCE_CHECK_ENABLED=true

# Container Security
SECCOMP_PROFILE=default
APPARMOR_PROFILE=docker-default
SELINUX_ENABLED=false

# Network Security
FIREWALL_ENABLED=true
INTRUSION_DETECTION=enabled
TRAFFIC_ANALYSIS=enabled

# ==========================================
# EXAMPLE PRODUCTION VALUES
# ==========================================

# Production Example - Uncomment and modify for production use:
# ENVIRONMENT=production
# LOG_LEVEL=warn
# DEBUG_MODE=false
# POSTGRES_PASSWORD=ProductionSecurePassword123!
# REDIS_PASSWORD=ProductionRedisPassword456!
# SESSION_SECRET=ProductionSessionSecret789!
# VNC_PASSWORD=ProductionVNCPassword!2024
