# Quality Thresholds Environment Variables Template
# Copy this file to your GitHub repository secrets or environment variables

# ===========================================
# NASA COMPLIANCE THRESHOLDS
# ===========================================
# Minimum NASA POT10 compliance score (0.0-1.0)
NASA_MIN_SCORE=0.85

# Maximum critical violations allowed (defense industry standard: 0)
NASA_MAX_CRITICAL=0

# Maximum high severity violations allowed
NASA_MAX_HIGH=5

# ===========================================
# SECURITY ANALYSIS THRESHOLDS
# ===========================================
# Maximum critical security vulnerabilities (zero tolerance)
SEC_MAX_CRITICAL=0

# Maximum high severity security vulnerabilities
SEC_MAX_HIGH=3

# Maximum secrets detected (zero tolerance for production)
SEC_MAX_SECRETS=0

# Security tool timeout in seconds
SEC_TOOL_TIMEOUT=300

# ===========================================
# CONNASCENCE ANALYSIS THRESHOLDS
# ===========================================
# Maximum critical connascence violations
CONN_MAX_CRITICAL=5

# Minimum overall code quality score (0.0-1.0)
CONN_MIN_QUALITY=0.70

# Maximum god objects allowed
CONN_MAX_GOD_OBJECTS=3

# Maximum total violations threshold
CONN_MAX_TOTAL_VIOLATIONS=50

# ===========================================
# ARCHITECTURE ANALYSIS THRESHOLDS
# ===========================================
# Minimum architectural health score (0.0-1.0)
ARCH_MIN_HEALTH=0.70

# Maximum coupling score (0.0-1.0, lower is better)
ARCH_MAX_COUPLING=0.60

# Maximum complexity score (0.0-1.0, lower is better)
ARCH_MAX_COMPLEXITY=0.70

# Minimum maintainability index (0.0-1.0)
ARCH_MIN_MAINTAINABILITY=0.65

# Maximum architectural hotspots allowed
ARCH_MAX_HOTSPOTS=10

# ===========================================
# CACHE OPTIMIZATION THRESHOLDS
# ===========================================
# Minimum cache health score (0.0-1.0)
CACHE_MIN_HEALTH=0.75

# Minimum cache hit rate (0.0-1.0)
CACHE_MIN_HIT_RATE=0.60

# Minimum cache efficiency (0.0-1.0)
CACHE_MIN_EFFICIENCY=0.70

# Maximum optimization potential (0.0-1.0, lower is better)
CACHE_MAX_OPTIMIZATION_POTENTIAL=0.40

# ===========================================
# PERFORMANCE MONITORING THRESHOLDS
# ===========================================
# Minimum CPU efficiency score (0.0-1.0)
PERF_MIN_CPU_EFFICIENCY=0.70

# Minimum memory optimization score (0.0-1.0)
PERF_MIN_MEMORY_OPTIMIZATION=0.65

# Maximum analysis time in seconds
PERF_MAX_ANALYSIS_TIME=120

# ===========================================
# MECE DUPLICATION THRESHOLDS
# ===========================================
# Minimum MECE score (0.0-1.0)
MECE_MIN_SCORE=0.70

# Maximum duplication clusters allowed
MECE_MAX_DUPLICATIONS=10

# Maximum high-similarity duplications (>90%)
MECE_MAX_HIGH_SIMILARITY=5

# ===========================================
# QUALITY ORCHESTRATOR THRESHOLDS
# ===========================================
# Minimum overall quality score for deployment (0.0-1.0)
OVERALL_MIN_QUALITY=0.75

# Maximum critical issues across all analyses
OVERALL_MAX_CRITICAL_ISSUES=5

# Minimum component success rate (0.0-1.0)
OVERALL_MIN_SUCCESS_RATE=0.80

