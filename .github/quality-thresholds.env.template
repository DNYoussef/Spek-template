# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific quality gates
ENABLE_NASA_COMPLIANCE=true
ENABLE_SECURITY_SCANNING=true
ENABLE_CONNASCENCE_ANALYSIS=true
ENABLE_ARCHITECTURE_ANALYSIS=true
ENABLE_CACHE_OPTIMIZATION=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MECE_ANALYSIS=true

# Enable fallback mode when analysis tools are unavailable
ENABLE_FALLBACK_MODE=true

# Enable detailed logging and debug output
ENABLE_DEBUG_LOGGING=false

# Enable artifact generation for failed builds
ENABLE_FAILURE_ARTIFACTS=true