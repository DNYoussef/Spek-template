{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    // Maximum type safety settings
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,

    // Advanced type checking flags
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,

    // Import/export strictness
    "importsNotUsedAsValues": "error",
    "preserveValueImports": false,
    "verbatimModuleSyntax": false,

    // Performance and safety optimizations
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Enhanced module resolution
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Output configuration
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    // Emit control
    "noEmitOnError": true,
    "emitDeclarationOnly": false,
    "removeComments": false,
    "preserveConstEnums": true,

    // Advanced path mapping for type organization
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/types/base/*": ["src/types/base/*"],
      "@/types/domains/*": ["src/types/domains/*"],
      "@/types/swarm/*": ["src/types/swarm/*"],
      "@/types/memory/*": ["src/types/memory/*"],
      "@/types/integration/*": ["src/types/integration/*"],
      "@/types/utilities/*": ["src/types/utilities/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/config/*": ["src/config/*"],
      "@/tests/*": ["tests/*"],
      "@/swarm/*": ["src/swarm/*"],
      "@/domains/*": ["src/domains/*"],
      "@/memory/*": ["src/swarm/memory/*"],
      "@/queen/*": ["src/swarm/queen/*"],
      "@/princess/*": ["src/swarm/princess/*"],
      "@/drone/*": ["src/swarm/drone/*"]
    },

    // Type inclusion
    "types": ["node", "jest", "@types/jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  // Comprehensive inclusion for strict checking
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    ".claude/**/*.ts",
    ".claude/**/*.js",
    "flow/**/*.ts",
    "flow/**/*.js",
    "config/**/*.ts",
    "analyzer/**/*.ts",
    "interfaces/**/*.ts"
  ],

  // Strict exclusions
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "tmp",
    ".temp",
    ".cache",
    ".sandboxes",
    "**/*.d.ts",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.min.js",
    "**/node_modules/**",
    ".claude/.artifacts"
  ],

  // TypeScript compiler diagnostics
  "compileOnSave": false,
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "**/.git", "**/dist", "**/coverage"]
  },

  // Enhanced type checking for Phase 4
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}